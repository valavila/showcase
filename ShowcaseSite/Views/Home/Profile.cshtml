@{
    ViewData["Title"] = "User Profile";
    
}
@using ShowcaseSite.ViewModels;
@model ProductViewModel

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>@ViewBag.Name</h4>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <center>
                                <img width="100" src="~/GeneralUser.jpg" />
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <center>
                                <h5>       About Me</h5>
                            </center>
                            <div class="form-group">
                                <div class="input-group">
                                    <p>@ViewBag.Message</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>Add Product</h4>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <center>
                                <p>Your products will be listed here</p>
                            </center>
                        </div>

                    </div>
                </div>
            </div>
        </div>

 
        <div class="col-md-5">
            <br />
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>Add Product</h4>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">

                                <div class="form-group row">
                                    <label asp-for="Title" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-12">
                                        <input asp-for="Title" class="form-control" placeholder="Name">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Description" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-12">
                                        <input asp-for="Description" class="form-control" placeholder="Email">
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Price" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-12">
                                        <input asp-for="Price" class="form-control" placeholder="Email">
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>



                                <div class="form-group row">
                                    <label asp-for="ProductPic" class="col-sm-12 col-form-label"></label>
                                    <div class="col-sm-12">
                                        <div class="custom-file">
                                            <input asp-for="ProductPic" class="form-control custom-file-input">
                                            <label class="custom-file-label">Choose File...</label>
                                        </div>
                                    </div>
                                </div>

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                </div>

                                @section Scripts {
                                    <script>
                                        $(document).ready(function ()
                                        {
                                            $('.custom-file-input').on("change", function ()
                                            {
                                                var fileName = $(this).val().split("\\").pop(); $(this).next('.custom-file-label').html(fileName)
                                            });
                                        });
                                    </script>
                                }
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>